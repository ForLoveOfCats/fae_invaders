import faylib::Vec2
import sprite::Sprite, Textures
import entity_system::EntitySystem, Context

struct Enemy {
	sprite: Sprite
}

method static Enemy
fn spawn(textures: &Textures, entity_system: &mut EntitySystem, position: Vec2) {
	entity_system.enemy.push(Enemy {
		sprite: Sprite {
			texture: textures.enemy.&
			position
		}
	})
}

method mut Enemy
fn tick(_context: &mut Context<Enemy>) {
	self.sprite.draw()
}
