import faylib::Vec2
import sprite::Sprite, Textures
import entity_system::EntitySystem, Context

struct Enemy {
	sprite: Sprite
}

method static Enemy
fn spawn(textures: &Textures, entity_system: &mut EntitySystem, window_size: Vec2) {
	entity_system.enemy.push(Enemy {
		sprite: Sprite {
			texture: textures.enemy.&
			position: Vec2 {
				x: window_size.x / 2
				y: textures.enemy.height.(f32)
			}
		}
	})
}

method mut Enemy
fn tick(_context: &mut Context<Enemy>) {
	self.sprite.draw()
}
